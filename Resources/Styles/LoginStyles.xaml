<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Login Page Container Style -->
    <Style x:Key="LoginContainerStyle" TargetType="Grid">
        <Setter Property="BackgroundColor" Value="{StaticResource Background}"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="RowSpacing" Value="0"/>
    </Style>

    <!-- Header Bar Style -->
    <Style x:Key="LoginHeaderStyle" TargetType="Grid">
        <Setter Property="BackgroundColor" Value="{StaticResource Secondary}"/>
        <Setter Property="Padding" Value="24,12"/>
        <Setter Property="HeightRequest" Value="56"/>
    </Style>

    <!-- Header Logo Text -->
    <Style x:Key="HeaderLogoTextStyle" TargetType="Label">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="TextColor" Value="{StaticResource Foreground}"/>
        <Setter Property="VerticalOptions" Value="Center"/>
    </Style>

    <!-- Login Content Style -->
    <Style x:Key="LoginContentStyle" TargetType="VerticalStackLayout">
        <Setter Property="MaximumWidthRequest" Value="500"/>
        <Setter Property="Spacing" Value="20"/>
        <Setter Property="VerticalOptions" Value="Center"/>
        <Setter Property="HorizontalOptions" Value="Center"/>
    </Style>

    <!-- Login Title Style -->
    <Style x:Key="LoginTitleStyle" TargetType="Label">
        <Setter Property="FontSize" Value="28"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="TextColor" Value="{StaticResource Foreground}"/>
        <Setter Property="HorizontalOptions" Value="Start"/>
        <Setter Property="Margin" Value="0,0,0,0"/>
    </Style>

    <!-- Title Divider -->
    <Style x:Key="TitleDividerStyle" TargetType="BoxView">
        <Setter Property="HeightRequest" Value="1"/>
        <Setter Property="BackgroundColor" Value="{StaticResource Border}"/>
        <Setter Property="Margin" Value="0,8,0,16"/>
        <Setter Property="CornerRadius" Value="0"/>
    </Style>

    <!-- Simple Entry Style (using Border for Entry in MAUI) -->
    <Style x:Key="LoginEntryStyle" TargetType="Border">
        <Setter Property="Stroke" Value="{StaticResource BorderBrush}"/>
        <Setter Property="StrokeThickness" Value="1.5"/>
        <Setter Property="StrokeShape" Value="RoundRectangle 8"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="BackgroundColor" Value="{StaticResource Secondary}"/>
    </Style>
    
    <!-- Entry Style inside Border -->
    <Style x:Key="LoginInnerEntryStyle" TargetType="Entry">
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="TextColor" Value="{StaticResource Foreground}"/>
        <Setter Property="PlaceholderColor" Value="{StaticResource Placeholder}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="HeightRequest" Value="46"/>
        <Setter Property="Margin" Value="12,0"/>
    </Style>

    <!-- Primary Button Style -->
    <Style x:Key="LoginPrimaryButtonStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource Primary}"/>
        <Setter Property="TextColor" Value="{StaticResource White}"/>
        <Setter Property="BorderColor" Value="Transparent"/>
        <Setter Property="BorderWidth" Value="0"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="HeightRequest" Value="46"/>
        <Setter Property="Padding" Value="20,10"/>
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal">
                        <VisualState.Setters>
                            <Setter Property="Shadow">
                                <Setter.Value>
                                    <Shadow Offset="0,4" Radius="8" Opacity="0.15" Brush="{StaticResource BlackBrush}"/>
                                </Setter.Value>
                            </Setter>
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="PointerOver">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource PrimaryDark}"/>
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="Scale" Value="0.97"/>
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource Gray700}"/>
                            <Setter Property="Opacity" Value="0.4"/>
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <!-- Secondary Button Style -->
    <Style x:Key="LoginSecondaryButtonStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="TextColor" Value="{StaticResource Primary}"/>
        <Setter Property="BorderColor" Value="Transparent"/>
        <Setter Property="BorderWidth" Value="0"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="HeightRequest" Value="40"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="PointerOver">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="#263B82F6"/>
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="Scale" Value="0.95"/>
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <!-- Error Label Style -->
    <Style x:Key="ErrorLabelStyle" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource Error}"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Margin" Value="0,-8,0,0"/>
        <Setter Property="IsVisible" Value="False"/>
    </Style>

    <!-- Entry Container Style -->
    <Style x:Key="EntryContainerStyle" TargetType="Grid">
        <Setter Property="RowSpacing" Value="0"/>
        <Setter Property="Margin" Value="0"/>
    </Style>

    <!-- Footer Styles -->
    <Style x:Key="FooterSectionTitleStyle" TargetType="Label">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="TextColor" Value="{StaticResource Foreground}"/>
        <Setter Property="Margin" Value="0,0,0,12"/>
    </Style>

    <Style x:Key="FooterLinkStyle" TargetType="Label">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="TextColor" Value="{StaticResource Placeholder}"/>
        <Setter Property="Margin" Value="0,4"/>
    </Style>

    <Style x:Key="FooterDescriptionStyle" TargetType="Label">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="TextColor" Value="{StaticResource Placeholder}"/>
        <Setter Property="Margin" Value="0,8,0,0"/>
    </Style>

    <!-- Animation Fade In Style -->
    <Style x:Key="FadeInAnimationStyle" TargetType="VisualElement">
        <Setter Property="Opacity" Value="0"/>
    </Style>

</ResourceDictionary>