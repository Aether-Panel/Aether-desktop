<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Note: For Android please see also Platforms\Android\Resources\values\colors.xml -->

    <!-- SkyPanel Color Palette - Dark Mode Default -->
    <Color x:Key="Primary">#3B82F6</Color>
    <Color x:Key="PrimaryLight">#07A7E3</Color>
    <Color x:Key="PrimaryDark">#2563EB</Color>
    <Color x:Key="Background">#0F172A</Color>
    <Color x:Key="Foreground">#E2E8F0</Color>
    <Color x:Key="Border">#334155</Color>
    <Color x:Key="Error">#EF4444</Color>
    <Color x:Key="Secondary">#1E293B</Color>
    <Color x:Key="Placeholder">#94A3B8</Color>
    <Color x:Key="Danger">#F44336</Color>
    <Color x:Key="ModalOverlay">#020617</Color>
    <Color x:Key="TextPrimary">#E2E8F0</Color>
    <Color x:Key="TextSecondary">#94A3B8</Color>
    
    <!-- Light Mode Variants -->
    <Color x:Key="LightPrimary">#07A7E3</Color>
    <Color x:Key="LightBackground">#FFFFFF</Color>
    <Color x:Key="LightForeground">#0F172A</Color>
    <Color x:Key="LightBorder">#E2E8F0</Color>
    <Color x:Key="LightSecondary">#F8FAFC</Color>

    <!-- Legacy Colors (for compatibility) -->
    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">#000000</Color>
    <Color x:Key="Gray100">#F1F5F9</Color>
    <Color x:Key="Gray200">#E2E8F0</Color>
    <Color x:Key="Gray300">#CBD5E1</Color>
    <Color x:Key="Gray400">#94A3B8</Color>
    <Color x:Key="Gray500">#64748B</Color>
    <Color x:Key="Gray600">#475569</Color>
    <Color x:Key="Gray700">#334155</Color>
    <Color x:Key="Gray800">#1E293B</Color>
    <Color x:Key="Gray900">#0F172A</Color>
    <Color x:Key="Gray950">#020617</Color>
    
    <!-- Text Colors -->
    <Color x:Key="PrimaryDarkText">#FFFFFF</Color>
    <Color x:Key="SecondaryDarkText">#94A3B8</Color>
    <Color x:Key="OffBlack">#0F172A</Color>
    <Color x:Key="Magenta">#FF00FF</Color>

    <!-- SkyPanel Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryLight}"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource Background}"/>
    <SolidColorBrush x:Key="ForegroundBrush" Color="{StaticResource Foreground}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource Border}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource Error}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="PlaceholderBrush" Color="{StaticResource Placeholder}"/>
    
    <!-- Light Mode Brushes -->
    <SolidColorBrush x:Key="LightPrimaryBrush" Color="{StaticResource LightPrimary}"/>
    <SolidColorBrush x:Key="LightBackgroundBrush" Color="{StaticResource LightBackground}"/>
    <SolidColorBrush x:Key="LightForegroundBrush" Color="{StaticResource LightForeground}"/>
    <SolidColorBrush x:Key="LightBorderBrush" Color="{StaticResource LightBorder}"/>
    <SolidColorBrush x:Key="LightSecondaryBrush" Color="{StaticResource LightSecondary}"/>
    
    <!-- Legacy Brushes -->
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>
    <SolidColorBrush x:Key="Gray100Brush" Color="{StaticResource Gray100}"/>
    <SolidColorBrush x:Key="Gray200Brush" Color="{StaticResource Gray200}"/>
    <SolidColorBrush x:Key="Gray300Brush" Color="{StaticResource Gray300}"/>
    <SolidColorBrush x:Key="Gray400Brush" Color="{StaticResource Gray400}"/>
    <SolidColorBrush x:Key="Gray500Brush" Color="{StaticResource Gray500}"/>
    <SolidColorBrush x:Key="Gray600Brush" Color="{StaticResource Gray600}"/>
    <SolidColorBrush x:Key="Gray700Brush" Color="{StaticResource Gray700}"/>
    <SolidColorBrush x:Key="Gray800Brush" Color="{StaticResource Gray800}"/>
    <SolidColorBrush x:Key="Gray900Brush" Color="{StaticResource Gray900}"/>
    <SolidColorBrush x:Key="Gray950Brush" Color="{StaticResource Gray950}"/>
</ResourceDictionary>